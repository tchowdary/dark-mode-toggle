{
  "manifest_version": 3,
  "name": "Dark Mode Auto Toggle",
  "version": "1.0.1",
  "description": "Automatically toggle Firefox's dark/light mode based on custom schedules or manual control",
  "author": "tchowdary",
  "homepage_url": "https://github.com/tchowdary/dark-mode-toggle",
  "browser_specific_settings": {
    "gecko": {
      "id": "darkmodeautotoggle@yourdomain.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "browserSettings"
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon.svg",
      "96": "icons/icon.svg"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  }
}